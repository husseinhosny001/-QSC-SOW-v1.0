        Point(start.x - contact_size/2, start.y + heater_y_offset - 0.5) * 1000,
        Point(start.x + contact_size/2, start.y + heater_y_offset + 0.5) * 1000,
        contact_size * 1000,
        HEATER_LAYER
    )
    
    right_contact = Rectangle(
        Point(start.x + length - contact_size/2, start.y + heater_y_offset - 0.5) * 1000,
        Point(start.x + length + contact_size/2, start.y + heater_y_offset + 0.5) * 1000,
        contact_size * 1000,
        HEATER_LAYER
    )
    
    push!(components, waveguide, heater, left_contact, right_contact)
    
    return CompositeComponent("PhaseShifter_$(length)um", components)
end

