    coupling_region = Rectangle(
        Point(center.x - gap/2 - wg_width/2, center.y - 2.0) * 1000,
        Point(center.x + gap/2 + wg_width/2, center.y + 2.0) * 1000,
        4.0 * 1000,  # Ø·ÙˆÙ„ Ù…Ù†Ø·Ù‚Ø© Ø§Ù„Ø§Ù‚ØªØ±Ø§Ù†
        WAVEGUIDE_LAYER
    )
    
