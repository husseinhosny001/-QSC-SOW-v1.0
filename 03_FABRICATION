    positions = [
        Point(center.x - gap/2, center.y - length/2),
        Point(center.x + gap/2, center.y - length/2),
        Point(center.x - gap/2, center.y + length/2),
        Point(center.x + gap/2, center.y + length/2)
    ]
    
    components = []
    
    # Ø§Ù„Ø£Ø¯Ù„Ø© Ø§Ù„Ù…Ø³ØªÙ‚ÙŠÙ…Ø© Ø§Ù„Ø±Ø£Ø³ÙŠØ©
