    heater_y_offset = 1.0  # Î¼m ÙÙˆÙ‚ Ø§Ù„Ø¯Ù„ÙŠÙ„
    heater_start = Point(start.x, start.y + heater_y_offset)
    heater_end = Point(start.x + length, start.y + heater_y_offset)
    heater_width = 0.3  # Ø¹Ø±Ø¶ Ø£Ø¶ÙŠÙ‚ Ù„Ù„Ù…Ø³Ø®Ù†
    
    # Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ù…Ø³Ø®Ù† ÙƒÙ…Ø³ØªØ·ÙŠÙ„
