    return CompositeComponent("DirectionalCoupler_$(coupling)", components)
end

# ========== 3. ØªØ¹Ø±ÙŠÙ Ø­Ù„Ù‚Ø© Ø±Ù†Ø§Ù†Ø© ØºÙŠØ± Ø®Ø·ÙŠØ© ==========
function create_kerr_ring_resonator(center::Point, radius::Float64=5.0,
