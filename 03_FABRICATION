    coupling_length = 2.0  # Î¼m
    coupling_gap = 0.15    # Î¼m
    
    coupling_center = Point(center.x, bus_y - bus_waveguide_offset/2)
    coupling_region = Rectangle(
        Point(coupling_center.x - 1.0, coupling_center.y - 0.1) * 1000,
        Point(coupling_center.x + 1.0, coupling_center.y + 0.1) * 1000,
        coupling_length * 1000,
        layer
