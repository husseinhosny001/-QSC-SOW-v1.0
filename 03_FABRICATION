# ØªØ¹Ø±ÙŠÙ Ø§Ù„Ø·Ø¨Ù‚Ø§Øª Ù…Ù† PDK
const WAVEGUIDE_LAYER = LayerSpec(1, 0)   # Ø·Ø¨Ù‚Ø© Si3N4
const NONLINEAR_LAYER = LayerSpec(2, 0)   # Ø·Ø¨Ù‚Ø© AlGaAs
const HEATER_LAYER = LayerSpec(10, 0)     # Ø·Ø¨Ù‚Ø© TiN

# ========== 1. ØªØ¹Ø±ÙŠÙ Ø¯Ù„ÙŠÙ„ Ù…ÙˆØ¬ÙŠ Ø£Ø³Ø§Ø³ÙŠ ==========
function create_straight_waveguide(start::Point, stop::Point, width::Float64=0.5)
    """Ø¥Ù†Ø´Ø§Ø¡ Ø¯Ù„ÙŠÙ„ Ù…ÙˆØ¬ÙŠ Ù…Ø³ØªÙ‚ÙŠÙ…"""
    # Ø§Ù„ØªØ­ÙˆÙŠÙ„ Ù…Ù† micron Ø¥Ù„Ù‰ nanometer (ÙˆØ­Ø¯Ø§Øª GDSII)
    start_nm = start * 1000
    stop_nm = stop * 1000
