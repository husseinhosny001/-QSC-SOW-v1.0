    waveguide = Rectangle(
        start_nm,
        stop_nm,
        width_nm,
        WAVEGUIDE_LAYER
    )
    
    return waveguide
end

function create_bend_waveguide(center::Point, radius::Float64, 
                               start_angle::Float64, end_angle::Float64,
                               width::Float64=0.5)
    """Ø¥Ù†Ø´Ø§Ø¡ Ø¯Ù„ÙŠÙ„ Ù…ÙˆØ¬ÙŠ Ù…Ù†Ø­Ù†ÙŠ (Ù…Ù†Ø¹Ø·Ù)"""
